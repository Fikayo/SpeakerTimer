<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChurchTimer.Presentation.Windows"
        xmlns:Views="clr-namespace:ChurchTimer.Presentation.Views" 
        x:Class="ChurchTimer.Presentation.Windows.PresentationWindow"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        Title="Live!" Height="500" Width="1000" WindowState="Maximized" Style="{DynamicResource WindowStyle}">

    <WindowChrome.WindowChrome>

        <WindowChrome 
            ResizeBorderThickness="{Binding ResizeBorderThickness}"
            CornerRadius="0"
            CaptionHeight="{Binding TitleHeight}"
            GlassFrameThickness="0"            
           />

    </WindowChrome.WindowChrome>

    <Grid>
        <Views:BasicTimerView x:Name="timerView"/>
    </Grid>
</Window>
