<Application x:Class="ChurchTimer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChurchTimer" Startup="App_Startup">
    <Application.Resources>

        <ResourceDictionary>

            <!-- Order is important (Cascading style sheet) -->
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Presentation/Styles/Colours.xaml" />

                <ResourceDictionary Source="Presentation/Styles/Fonts.xaml" />
                
                <ResourceDictionary Source="Presentation/Styles/Buttons.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!-- Window Header text -->
            <Style x:Key="HeaderText" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockStyle}">
                <Setter Property="Foreground" Value="{StaticResource ForegroundDarkBrush}" />
                <Setter Property="HorizontalAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Padding" Value="8" />
            </Style>

        </ResourceDictionary>
        
    </Application.Resources>
</Application>
